{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "_build",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration":true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "lib": [ "esnext", "dom" ],
    "noImplicitAny": true,
    "allowJs":false,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/index.ts"],
  "exclude":["node_modules", "**/*.d.ts"]
}
